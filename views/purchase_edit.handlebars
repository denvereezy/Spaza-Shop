<div id="container">

<form action="/purchase/update/{{purchase.Id}}" method="POST" class="form-horizontal" >

	<div class="form-group">
		<label class="control-label col-xs-2">Suppliers</label>
		<div class="col-xs-10">	 
     			<select name="Supplier_Id">
    				{{#each Suppliers}}
  					{{#if selectedSupplier }}
      					<option  selected="true" value = "{{Id}}">{{Name}}</option> 
                                        {{else}}
  					<option value = "{{Id}}" >{{Name}}</option>
                                       {{/if}}
    				{{/each}}
  			</select>
		</div>
	</div>
      
	<div class="form-group">
		<label class="control-label col-xs-2">Products</label>
		<div class="col-xs-10">
                      
	 
     			<select name="Product_Id">
    				{{#each products}}

                	{{#if selectedProduct }}
	 		  <option value = "{{Id}}" selected="true" >{{Name}}</option>
		    	{{else}}
  				<option value = "{{Id}}" >{{Name}}</option>
			{{/if}}
                  
            {{/each}}
  			</select>
		</div>
	</div>
	
	<div class="form-group">
		<label for="number" class="control-label col-xs-2">Qauntity</label>	 
		 <div class="col-xs-10">
     
			   <input type="number" name="Qty" class="form-control" value="{{purchase.Qty}}" required>
    
		</div>
	</div>
	

	<div class="form-group">
		<label for="number" class="control-label col-xs-2">Price</label>
		<div class="col-xs-10">	 
        
     			<input type="number" class="form-control" name="Purchase_price" value="{{purchase.Purchase_price}}" required>
        
		</div>
	</div>
 
	<div class="form-group">
		<label for="date" class="control-label col-xs-2">Date</label>
			<div class="col-xs-10">
          
     			    <input type="date" class="form-control" name="Purchase_date" value= "{{purchase.Purchase_date}}" required/>
           
			</div>
		
		</div> 

      <input type="submit" onclick="myFunction()">

</form>

</div>
      <script>
      function myFunction() {
          
          alert("New purchase has been edited");
         
        }
      </script>
</div>
